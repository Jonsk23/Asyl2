@using Asyl.ViewModels
@model JobAdVM
@addTagHelper "*,Microsoft.AspNet.Mvc.TagHelpers"

@{
    Layout = "~/Views/Shared/_Layout";
}

<script>
    $(document).ready(function () {
        $.post("/Home/GetCities", function (result) {

            //var res = result.split(',');
            //alert(res);

            for (var i = 0; i < result.length; i++) {
                var value = result[i];
                $('#selectLocation').append($("<option></option>")
                    .attr("value", value)
                    .text(value));

                //$('#selectLocation').append("<option>" + result[i] + "</option>");
            }
        })
    });

</script>

<header class="portrait nutpic nutskog">
    <div class="container" style="font-size:large">
        <div class="row">
            <div class="col-lg-12">
                <div class="row" style="padding-bottom: 200px">
                    <div class="box">
                        <div class="col-lg-12" align="center">
                            <hr />
                            <h1 class="nutcolor2">
                                Create an advert
                            </h1>
                            <hr />
                            <br>
                            <form asp-controller="Admin" asp-action="AddUser">
                                <div class="row">
                                    <div class="col-xs-4 col-sm-2 col-md-2">
                                    </div>
                                    <div class="col-xs-8 col-sm-4 col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Title"></label>
                                            <input asp-for="Title" class="form-control" placeholder="ex: Målvakt" tabindex="1" />
                                            <span asp-validation-for="Title"></span>
                                        </div>
                                    </div>
                                    <div class="col-xs-8 col-sm-4 col-md-4">
                                        <div class="form-group">
                                            <label asp-for="FieldOfWork"></label>
                                            <input asp-for="FieldOfWork" class="form-control" placeholder="What is the area of work" tabindex="2" />
                                            <span asp-validation-for="FieldOfWork"></span>
                                        </div>
                                    </div>
                                    <div class="col-xs-4 col-sm-2 col-md-2">
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-xs-4 col-sm-2 col-md-2">
                                    </div>
                                    <div class="col-xs-16 col-sm-8 col-md-8">
                                        <div class="form-group">
                                            <label asp-for="Description"></label>
                                            <textarea asp-for="Description" class="form-control input-sm" placeholder="Describe the position here..." tabindex="3" rows="5" data-val-maxlength-max="420"></textarea>
                                            <span asp-validation-for="Description"></span>
                                            <br />
                                        </div>
                                        <div class="col-xs-4 col-sm-2 col-md-2">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-4 col-sm-2 col-md-2">
                                    </div>
                                    <div class="col-xs-8 col-sm-4 col-md-4">
                                        <div class="form-group">
                                            <label asp-for="DurationInWeeks"></label>
                                            <input asp-for="DurationInWeeks" class="form-control" placeholder="ex: 5 (will show as 5 weeks)" tabindex="4" />
                                            <span asp-validation-for="DurationInWeeks"></span>
                                        </div>
                                    </div>
                                    <div class="col-xs-8 col-sm-4 col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Location"></label>
                                            <select asp-for="Location" class="form-control" id="selectLocation"></select>
                                            <span asp-validation-for="Location"></span>
                                        </div>
                                    </div>
                                    <div class="col-xs-4 col-sm-2 col-md-2">
                                    </div>
                                </div>
                                <br />
                                <br />
                                <div class="row">
                                    <div class="col-xs-4 col-sm-2 col-md-2">
                                    </div>
                                    <div class="col-xs-16 col-sm-8 col-md-8 text-center">
                                        <a href="~/company/createjobad" style="padding-right:25px"><input type="submit" value="Create" class="btn btn-primary btn-group nutmegbtn paddbtn" tabindex="6" style="padding-right:25px"></a>
                                        <a href="~/company/index" class="btn btn-primary btn-group nutmegbtn paddbtn">Cancel</a>
                                    </div>
                                    <div class="col-xs-4 col-sm-2 col-md-2">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</header>

@section script{
    <script src="~/scripts/jquery.validate.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.js"></script>
}
