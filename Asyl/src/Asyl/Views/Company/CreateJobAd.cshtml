@using Asyl.ViewModels
@model JobAdVM
@addTagHelper "*,Microsoft.AspNet.Mvc.TagHelpers"

@{
    Layout = "~/Views/Shared/_Layout";
}



<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="intro-text">
                    <span class="name">Enter information about the position</span>
                </div>
                <hr class="star-light">
                <div class="row" style="padding-bottom: 200px">
                    <div class="box">
                        <div class="col-lg-12" align="center">
                            <hr />
                            <h1 style="padding-bottom: 20px">
                                Register your advert and find new talent!
                                <hr />
                            </h1>
                            @*<div asp-validation-summary="ValidationSummary.All"></div>*@
                            <div class="text-center">
                                <form asp-controller="Admin" asp-action="AddUser">
                                    <table align="center">
                                        <tr>
                                            <td><label asp-for="Description"></label></td>
                                            <td>
                                                <input asp-for="Description" />
                                                <span asp-validation-for="Description"></span>
                                            </td>
                                            </ br>

                                        </tr>

                                        <tr>
                                            <td><label asp-for="FieldOfWork"></label></td>
                                            <td>
                                                <input asp-for="FieldOfWork" />
                                                <span asp-validation-for="FieldOfWork"></span>
                                            </td>
                                        </tr>

                                    </table>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</header>

@section script{
    <script src="~/scripts/jquery.validate.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.js"></script>
}
