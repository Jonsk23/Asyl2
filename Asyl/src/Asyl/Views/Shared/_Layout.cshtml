            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    <li class="page-scroll">
                        <a asp-controller="home" asp-action="index">Find internship <span class="glyphicon glyphicon-search" style="font-size:30px; color:white"></span></a>
                    </li>
                    <li>
                        @*<li class="page-scroll">*@
                        <a href="#aboutmodal" data-toggle="modal">For employees <span class="glyphicon glyphicon-heart" style="font-size:30px; color:white"></span></a>
                    </li>
                    <li>
                        @*<li class="page-scroll">*@
                        <a href="#worklifemodal" data-toggle="modal">For employers <span class="glyphicon glyphicon-briefcase" style="font-size:30px; color:white"></span></a>
                    </li>
                    <li>
                        <a href="~/home/index" type="button" data-toggle="dropdown">Language <span class="glyphicon glyphicon-globe" style="font-size:30px; color:white"></span><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href=""> English</a></li>
                            <li><a href=""> Swedish</a></li>
                        </ul>
                    </li>
                    <li>
                        @{if (User.Identity.IsAuthenticated)
                            {
                                <a href="~/home/index" type="button" data-toggle="dropdown">My account <span class="glyphicon glyphicon-user" style="font-size:30px; color:lightseagreen"></span><span class="caret"></span></a>
                                <ul class="dropdown-menu">

                                    @{var user = await userManager.FindByNameAsync(User.Identity.Name);

                                        if (await userManager.IsInRoleAsync(user, "company user"))
                                        {
                                    <li><a href="~/company/companyprofile">My company profile</a></li>
                                    <li><a href="~/account/Logout">Log out</a></li>
                                        }
                                        else
                                        {
                                    <li><a href="~/account/myprofile">My Profile</a></li>
                                    <li><a href="~/account/Logout">Log out</a></li>
                                            }
                                        }
                                </ul>
                            }
                            else
                            {
                                <a href="~/home/index" type="button" data-toggle="dropdown">My account <span class="glyphicon glyphicon-user" style="font-size:30px; color:white"></span><span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="~/account/registrationpage">Register</a></li>
                                    <li><a href="~/account/loginpage">Login</a></li>
                                </ul>
                            }
                        }
                    </li>
                </ul>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </div>
    </nav>

    <!--Page content will be put here!-->
