@using Asyl.ViewModels
@model CreateCompanyVM
@addTagHelper "*,Microsoft.AspNet.Mvc.TagHelpers"

@{
    Layout = "~/Views/Shared/_Layout";
}



<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="intro-text">
                    <span class="name">Enter your company information</span>
                </div>
                <hr class="star-light">
                <div class="row" style="padding-bottom: 200px">
                    <div class="box">
                        <div class="col-lg-12" align="center">
                            <hr />
                            <h1 style="padding-bottom: 20px">
                                Register your company and advertise for new talent!
                                <hr />
                            </h1>
                            @*<div asp-validation-summary="ValidationSummary.All"></div>*@
                            <div class="text-center">
                                <form asp-controller="Admin" asp-action="AddUser">
                                    <table align="center">
                                        <tr>
                                            <td><label asp-for="Username"></label></td>
                                            <td>
                                                <input asp-for="Username" />
                                                <span asp-validation-for="Username"></span>
                                            </td>
                                            </ br>

                                        </tr>

                                        <tr>
                                            <td><label asp-for="Password"></label></td>
                                            <td>
                                                <input asp-for="Password" />
                                                <span asp-validation-for="Password"></span>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td><label asp-for="Email"></label></td>
                                            <td>
                                                <input asp-for="Email" />
                                                <span asp-validation-for="Email"></span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><label asp-for="CorporateIdentityNumber"></label></td>
                                            <td>
                                                <input asp-for="CorporateIdentityNumber" />
                                                <span asp-validation-for="CorporateIdentityNumber"></span>
                                            </td>
                                        </tr>
                                        @*<tr>
                                            <td><label asp-for="CompanyName"></label></td>
                                            <td>
                                                <input asp-for="CompanyName" />
                                                <span asp-validation-for="CompanyName"></span>
                                            </td>
                                        </tr>*@
                                        <tr>
                                            <td><label asp-for="CompanyWebPage"></label></td>
                                            <td>
                                                <input asp-for="CompanyWebPage" />
                                                <span asp-validation-for="CompanyWebPage"></span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><label asp-for="ContactPerson"></label></td>
                                            <td>
                                                <input asp-for="ContactPerson" />
                                                <span asp-validation-for="ContactPerson"></span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td><input type="submit" value="Register!" /></td>
                                        </tr>
                                    </table>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</header>

@section script{
    <script src="~/scripts/jquery.validate.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.js"></script>
}
