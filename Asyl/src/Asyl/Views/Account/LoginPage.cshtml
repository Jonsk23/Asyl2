@using Asyl.ViewModels
@model LoginVM
@addTagHelper "*,Microsoft.AspNet.Mvc.TagHelpers"

@* ska vi ha följande?*@
@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication

@{
    Layout = "~/Views/Shared/_Layout";
}


<header class="portrait nutpic nutskog">
    <div class="container" style="font-size:large">
        <div class="row">
            <div class="col-lg-12">
                <div class="row" style="padding-bottom: 200px">
                    <div class="box">
                        <div class="col-lg-12" align="center">
                            <hr />
                            <h1 class="nutcolor">
                                Login                                
                            </h1>
                            <hr />
                            <br />
                            <form asp-controller="Admin" asp-action="Login">
                                <div class="row">
                                    <div class="col-xs-4 col-sm-2 col-md-2">
                                    </div>
                                    <div class="col-xs-8 col-sm-4 col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Username"></label>
                                            <input asp-for="Username" class="form-control" placeholder="ex: Zlatan10" tabindex="1">
                                            <span asp-validation-for="Username"></span>
                                        </div>
                                    </div>
                                    <div class="col-xs-8 col-sm-4 col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Password"></label>
                                            <input asp-for="Password" class="form-control" placeholder="ex: Abc_123" tabindex="2">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                            <br />
                                        </div>
                                    </div>
                                    <div class="col-xs-4 col-sm-2 col-md-2">
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-xs-4 col-sm-2 col-md-2">
                                    </div>
                                    <div class="col-xs-16 col-sm-8 col-md-8 text-center">
                                        <a href="~/home/index" style="padding-right:25px">
                                            <input type="submit" value="Login" class="btn btn-primary btn-group nutmegbtn paddbtn">
                                        </a>
                                        <a href="~/account/registrationpage" style="padding-right:25px" class="btn btn-primary btn-group nutmegbtn paddbtn">No account? - Register here!</a>
                                    </div>
                                    <div class="col-xs-4 col-sm-2 col-md-2">
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-xs-4 col-sm-2 col-md-2">
                                    </div>
                                    <div class="col-xs-16 col-sm-8 col-md-8 text-right">
                                        <a href="#" style="color:#ffffff">Forgot your password? - Click here</a>
                                    </div>
                                    <div class="col-xs-4 col-sm-2 col-md-2">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

@section script{
    <script src="~/scripts/jquery.validate.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.js"></script>
}
